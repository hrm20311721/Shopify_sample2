{% comment %}
  Renders collapsible material list

  Accepts:
  - product: {Object} passes in the product information.
  - block: {Object} passes in the block information.


  Usage:
  {% render 'icon-with-text',
    product: product
  %}
{% endcomment %}
<div class="product__accordion accordion" {{ block.shopify_attributes }}>
  <details id="Details-{{ block.shopify_attributes }}">
    <summary>
      <div class="summary__title">
        {% render 'icon-accordion', icon: "leaf" %}
        <h2 class="h4 accordion__title inline-richtext">
          原材料
        </h2>
      </div>
      {% render 'icon-caret' %}
    </summary>
    {% for material in product.metafields.custom.materials.value %}
      <div class="accordion__content rte" id="ProductAccordion-{{ block.id }}-{{ section.id }}">
        {{ material.materials.name }}
      </div>
  </details>
</div>